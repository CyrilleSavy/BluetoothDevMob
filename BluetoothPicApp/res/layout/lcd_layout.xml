<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circuit"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp" >

    <Space
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <EditText
        android:id="@+id/lcdLine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lcd_edittext_back"
        android:ems="10"
        android:hint="Premiere ligne"
        android:lines="1"
        android:maxLength="16"
        android:padding="8dp"
        android:selectAllOnFocus="false" >

        <requestFocus />
    </EditText>

    <Space
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <EditText
        android:id="@+id/lcdLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lcd_edittext_back"
        android:ems="10"
        android:hint="Deuxieme ligne"
        android:lines="1"
        android:maxLength="16"
        android:padding="8dp"
        android:selectAllOnFocus="false" />

    <Button
        android:id="@+id/buttonSendLCD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_selector"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dp"
        android:text="@string/btn_send_text"
        android:textSize="32sp" />

    <CheckBox
        android:id="@+id/ButtonBackLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:background="@drawable/lcd_edittext_back"
        android:checked="false"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="35dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="BackLight"
        android:textSize="28sp" />

</LinearLayout>