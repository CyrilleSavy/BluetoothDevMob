<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabText</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabs</item>
    </style>


    <!-- ActionBar styles -->
    <style name="ActionBarStyle" parent="@android:style/Widget.ActionBar">
        <item name="android:background">#991BC8F5</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="ActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">#000000</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="ActionBarTabs" parent="@android:style/Widget.Holo.ActionBar.TabView">

        <!-- tab indicator -->
        <item name="android:background">#991BC8F5</item>
        <item name="android:padding">0dp</item>
        <item name="android:width">600dp</item>
    </style>

</resources>